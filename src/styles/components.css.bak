/* Process section styles */
.process-timeline {
  display: flex;
  gap: 2rem;
  margin: 4rem 0;
  position: relative;
  justify-content: space-between;
}

.process-timeline::before {
  content: '';
  position: absolute;
  width: 80%;
  height: 4px;
  background: var(--gradient-secondary);
  top: 2.5rem;
  left: 10%;
  z-index: 0;
}

.process-step {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  flex: 1;
  z-index: 1;
}

.step-number {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 5rem;
  height: 5rem;
  border-radius: 50%;
  font-size: 2rem;
  font-weight: 700;
  color: white;
  background: var(--gradient-primary);
  margin-bottom: 1.5rem;
  box-shadow: var(--shadow-md);
}

.process-step h3 {
  margin-bottom: 0.5rem;
  color: var(--primary-color);
}

.process-step p {
  color: var(--text-color);
  font-size: 0.9rem;
}

/* Client logos */
.client-logos {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  gap: 2rem;
  margin: 3rem 0;
}

.client-logo {
  height: 80px;
  flex: 1;
  min-width: 150px;
  background-color: white;
  border-radius: var(--border-radius-md);
  box-shadow: var(--shadow-sm);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all var(--transition-normal);
}

.client-logo:hover {
  transform: translateY(-5px);
  box-shadow: var(--shadow-md);
}

/* Testimonials */
.testimonials-container {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 2rem;
  margin: 3rem 0;
}

.testimonial-card {
  background-color: white;
  border-radius: var(--border-radius-md);
  overflow: hidden;
  box-shadow: var(--shadow-md);
  transition: transform var(--transition-normal);
}

.testimonial-card:hover {
  transform: translateY(-5px);
}

.testimonial-content {
  padding: 2rem;
  position: relative;
  background-color: var(--light-bg);
}

.testimonial-content::before {
  content: """;
  position: absolute;
  top: 0;
  left: 1rem;
  font-size: 5rem;
  line-height: 1;
  color: var(--secondary-color);
  opacity: 0.2;
}

.testimonial-content p {
  position: relative;
  z-index: 1;
  color: var(--text-color);
  font-style: italic;
}

.testimonial-author {
  display: flex;
  align-items: center;
  padding: 1.5rem 2rem;
  background-color: white;
}

.author-image {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  margin-right: 1rem;
  background-color: #e2e8f0;
  background-size: cover;
  background-position: center;
}

